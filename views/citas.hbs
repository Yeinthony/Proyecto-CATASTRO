{{> NavbarUser item = this}}

<div class="conainer-agendarCita">
    <form action="/citas" method="post">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="container-fechaHora">
            <div class="container-fecha">
                <label for="fecha">Seleccione el dia</label>
                <input type="date" name="fecha" class="fecha">
            </div>
            <div class="container-hora">
                <label for="hora">Seleccione la hora</label>
                <select name="hora" class="hora">
                    <option value="08:30">08:30</option>
                    <option value="09:00">09:00</option>
                    <option value="09:30">09:30</option>
                    <option value="10:00">10:00</option>
                    <option value="10:30">10:30</option>
                    <option value="11:00">11:00</option>
                    <option value="11:30">11:30</option>
                    <option value="13:00">13:00</option>
                    <option value="13:30">13:30</option>
                    <option value="14:00">14:00</option>
                    <option value="14:30">14:30</option>
                    <option value="15:00">15:00</option>
                    <option value="15:30">15:30</option>
                </select>
            </div>
        </div>
        <div class="container-alertas">
                {{#each mensajes }} 
                    <div class="alertas">{{this.msg}}</div> 
                {{/each}}
            </div>
        <button class="btn-cita" type="submit">Guardar</button> 
    </form>
</div>